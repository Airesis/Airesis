<strong><%= t('pages.users.show.what_can_i_do') %></strong>
<ul>
  <li>
    <%= @actions.order(:seq).map { |a| a.description }.join('</li><li>').html_safe %>
  </li>
</ul>

<strong><%= t('pages.users.show.what_i_cant_do') %></strong>
<ul>
  <li>
    <%= GroupAction.where(['id not in (?)', @actions.select('group_actions.id').order(:seq)]).map { |a| a.description }.join('</li><li>').html_safe %>
  </li>
</ul>

<% if @group.enable_areas && current_user.scoped_areas(@group).count > 0 %>
    <div id="tabs">
      <ul>
        <% current_user.scoped_areas(@group).each do |area| %>
            <li><%= link_to area.name, "##{area.id}"%></li>
        <% end %>
      </ul>
      <% current_user.scoped_areas(@group).each do |area| %>
          <div id="<%= area.id %>">
            <strong><%= t('pages.users.show.what_can_i_do') %></strong>
            <ul>
              <li>
                <%= area.area_partecipations.find_by_user_id(current_user.id).area_role.area_actions.order(:seq).map { |a| a.description }.join('</li><li>').html_safe %>
              </li>
            </ul>

            <strong><%= t('pages.users.show.what_i_cant_do') %></strong>
            <ul>
              <li>
                <%= GroupAction.where(['id in (?) and id not in (?)', DEFAULT_AREA_ACTIONS, area.area_partecipations.find_by_user_id(current_user.id).area_role.area_actions.select('group_actions.id')]).map { |a| a.description }.join('</li><li>').html_safe %>
              </li>
            </ul>
          </div>
      <% end %>
    </div>
<% end %>


<script type="text/javascript">
  $('#tabs').tabs();
</script>