<% if !@topic.subscriber?(current_user.id) %>
    <%= link_to t("frm.topics.show.subscribe"), subscribe_group_forum_topic_url(@group, @forum, @topic), :remote => true, :class => "btn signalButton" %>
<% else %>
    <%= link_to t("frm.topics.show.unsubscribe"), unsubscribe_group_forum_topic_url(@group, @forum, @topic), :remote => true, :class => "btn signalButton" %>
<% end %>