@media (max-width: 1200px) {
    .groupListContainer {
        width: 100%;
    }
}

@media (min-width: 1201px) and (max-width: 1600px) {
    .groupListContainer {
        width: 50%;
    }
}

@media (min-width: 1601px) {
    .groupListContainer {
        width: 33%;
    }
}

.groupListContainer {
    float: left;
    .inner {
        border: 1px solid #cccccc;
        background: repeat scroll 0 0 #FFF;
        border-radius: 5px;
        margin-bottom: 15px;
        margin-right: 15px;
        padding: 10px;
        position: relative;
    }
}

.groupListContainer h3 {
    font-size: 18px;
    line-height: 20px;
    margin: 0px;
    white-space: nowrap;
    text-transform: uppercase;
}


.groupcontainer {
    clear: both;
}

.groupcontainer .groupImg24 {
    cursor: pointer;
    float: left;
    height: 24px;
    width: 24px;
    margin-right: 5px;
    margin-top: 2px;

}

.groupcontainer .group {
    cursor: pointer;
    float: left;
    /*width:140px;*/
}

.group_description {
    padding: 7px;
    border-radius: 10px;
    border: 1px solid rgb(204, 204, 204);
    background: none repeat scroll 0% 0% rgb(255, 255, 255);
    box-shadow: 0px 2px 3px rgb(121, 121, 121);
    line-height: 1.6em;
    margin-bottom: 10px;
}

input.days {
    width: 35px;

}

input.hours {
    width: 25px;

}

input.minutes {
    width: 25px;
}

.form_float {
    float: left;
    padding: 5px 10px 5px 0;
}

.loading_groups {
    background-color: #FAFAFA;
    border-top: 1px solid #E3E3E3;
    display: block;
    padding: 10px 0;
    text-align: center;
    color: #3366CC;
    font-weight: bold;
    cursor: pointer;
}

.loading_groups:hover {
    background-color: #F4F4F4;
    text-decoration: none;
}

#groups_list {
    margin-bottom: 10px;
}

#tag_cloud {
    padding: 15px 0px;
}

#group_search_form ul.token-input-list {
    width: 300px;
}

.groupListContainer .groupDescription .count {
    vertical-align: middle;
}

.groupDescription {
    overflow: hidden;
}

.territoryDescription {
    position: relative;
    white-space: nowrap;
    overflow: hidden;
}

.group_bottom {
    border-top: 1px solid #ccc;
    padding-top: 10px;
}

.groupListContainer .group_tag_desc {
    height: 60px;
    font-size: 0.8em;
    line-height: 1.2em;
    text-align: justify;
    overflow: hidden;
    margin-bottom: 5px;
    margin-top: 5px;
    position: relative;
}

.groupListContainer {
    .groupUserImage {
        padding-bottom:3px;
    }
}

.groupListContainer .group_tag_desc .fade_out {
    position: absolute;
    bottom: 0px;
    height: 30px;
    width: 100%;
    background: -webkit-linear-gradient(rgba(255, 255, 255, 0) 20%, rgba(255, 255, 255, 1) 100%);
    background-image: -moz-linear-gradient(rgba(255, 255, 255, 0) 20%, rgba(255, 255, 255, 1) 100%);
    background-image: -o-linear-gradient(rgba(255, 255, 255, 0) 20%, rgba(255, 255, 255, 1) 100%);
    background-image: linear-gradient(rgba(255, 255, 255, 0) 20%, rgba(255, 255, 255, 1) 100%);
    background-image: -ms-linear-gradient(rgba(255, 255, 255, 0) 20%, rgba(255, 255, 255, 1) 100%);
}

.groupListContainer .groupName {
    overflow: hidden;
    position: relative;
}

.title_fade {
    background-image: url('<%=asset_path 'vertical_line.png'%>');
    height: 20px;
    position: absolute;
    width: 20px;
    right: -3px;
    top: 0px;
}

.territory_fade {
    background-image: url('<%=asset_path 'vertical_line.png'%>');
    height: 20px;
    position: absolute;
    width: 20px;
    right: -3px;
    top: 0px;
}

.s_circle {
    border: 3px solid #888;
    border-radius: 50%;
    width: 13px;
    height: 13px;
}

.on .s_circle {
    border-color: #888;
}

.off .s_circle {
    border-color: #ccc;
}

.on .s_circle .i_circle {
    border-color: #888;
    background-color: #888;
}

.off .s_circle .i_circle {
    border-color: #ccc;
    background-color: #ccc;
}

.s_circle .i_circle {
    border: 2px solid #888;
    border-radius: 50%;
    width: 1px;
    height: 1px;
    margin: auto;
    margin-top: 2px;
    background-color: #888;
}

.group_info .portlet_panel {
    width: auto;
    max-width: 398px;
}

.group_show_page {
    position: relative;
    display: table;
}

.group_infos {
    /*position: absolute;
    right: 0px;
    top: 0px;
    max-width: 500px;*/
    display: table-cell;
    vertical-align: top;
    max-width: 472px;
}

.posts_container_main {
    max-width: 800px;
    /*margin-right: 500px;*/
    display: table-cell;
    vertical-align: top;
}

@media (max-width: 1200px) {
    .group_infos {
        display: none;
    }
    .posts_container_main {
        max-width: 100%;
        margin-right: 0px;
    }
}

